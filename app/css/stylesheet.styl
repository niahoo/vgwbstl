@import 'nib/reset'
global-reset()

/* -- Variables ------------------------------------------------------------- */

fblack = #393835
forange = #FFA621

/* -------------------------------------------------------------------------- */

// skiplink : liens d'accessibilit√© pour non-voyants
.skiplink
	display none

#topbar
	height 12px
	background fblack
	border-bottom 6px solid forange

#logo
	height 88px
	display block
	width 205px
	background url(img/logo.png) center top no-repeat transparent
	margin -16px auto 0

#site-description h1 {
	display: none;
}

#wrap
	background-image url(img/bg-top-1400.jpg), url(img/bg-bottom-1400.jpg), url(img/bg-texture.jpg)
	background-position center 18px, center bottom, 0 0
	background-repeat no-repeat, no-repeat, repeat
